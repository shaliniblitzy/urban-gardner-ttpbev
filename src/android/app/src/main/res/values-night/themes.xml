<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark theme variant for the Garden Planner application -->
    <style name="Theme.GardenPlanner" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- Window and status bar colors -->
        <item name="android:windowBackground">#121212</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Surface and background colors -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorOnBackground">#FFFFFF</item>

        <!-- Typography styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Title</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body</item>

        <!-- Widget styles -->
        <item name="materialButtonStyle">@style/Widget.GardenPlanner.Button</item>
        <item name="materialCardViewStyle">@style/Widget.GardenPlanner.Card</item>
    </style>
</resources>